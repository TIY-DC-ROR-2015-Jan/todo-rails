<h1>New Todo for '<%= @list.title %>'</h1>

<%= form_for [@list, @todo] do |f| %>
  <%= render partial: 'partials/errors', locals: { object: @todo } %>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_field :description, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :due_on %>
    <%= f.date_field :due_on, class: 'form-control' %>
  </div>
  <div class="actions">
    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>

<%= link_to 'Back', list_path(@list) %>
