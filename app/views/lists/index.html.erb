<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>List</th>
    </tr>
  </thead>
  <tbody>
    <% @lists.each do |list| %>
      <tr>
        <td><%= link_to list.name, list %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New List', new_list_path, class: 'btn btn-success' %>
